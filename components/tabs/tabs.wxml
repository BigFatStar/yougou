<view class="tabs_container">
    <view class="tabs_title">
        <view class="title_item {{item.isActive === true ? 'active' : ''}}"
        wx:for="{{tabs}}"
        wx:key="id"
        bindtap="handleItemTap"
        data-index="{{index}}">
        {{item.value}}
        </view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>
  
