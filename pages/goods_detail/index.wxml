<!-- 轮播图 -->
<swiper indicator-dots autoplay circular interval="2000">
    <swiper-item
    wx:for="{{goodsObj.pics}}"
    wx:key="pics_id">
        <image src="{{item.pics_sma}}" mode="widthFix"
        bindtap="handlePreviewImg" data-url="{{item.pics_sma}}"></image>
    </swiper-item>
</swiper>
<!-- 价格 -->
<view class="goods_price">
    ￥{{goodsObj.goods_price}}
</view>
<!-- 描述 -->
<view class="goods_name_row">
    <view class="goods_name">
        {{goodsObj.goods_name}}
    </view>
    <view class="goods_collect" bindtap="handleCollect">
        <text class="iconfont {{isCollected ? 'icon-shoucang1' : 'icon-shoucang'}}"></text>
        <view class="collect_text">收藏</view>
    </view>
</view>
<!-- 详情 -->
<view class="goods_info">
    <view class="info_title">图文详情</view>
    <rich-text class="" nodes="{{goodsObj.goods_introduce}}"></rich-text>
</view>
<!-- 底部工具栏 -->
<view class="btm_tools">
    <view class="tool_item">
        <text class="iconfont icon-kefu"></text>
        <view>客服</view>
        <button open-type="contact"></button>
    </view>
    <view class="tool_item">
        <text class="iconfont icon-fenxiang"></text>
        <view>分享</view>
        <button open-type="share"></button>
    </view>
    <navigator class="tool_item" open-type="switchTab" url="/pages/cart/index">
        <text class="iconfont icon-gouwuche"></text>
        <view>购物车</view>
    </navigator>
    <view class="tool_item btn_cart" bindtap="handleAddToCart">
        加入购物车
    </view>
    <view class="tool_item btn_buy">
        立即购买
    </view>
</view>
  

  
  