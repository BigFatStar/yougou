<!-- 添加收货地址 -->
<view class="receiver-address-row">
    <button wx:if="{{!address.userName}}" type="primary" plain bindtap="handleChooseAddress">
        获取收货地址
    </button>
    <view wx:else class="user_info_row">
    	<view class="user_info">
            <view>收货人:{{address.userName}}</view>
            <view>{{address.completeAdd}}</view>
    	</view>
    	<view class="user_phoneNum">
            {{address.telNumber}}
        </view>
    </view>
</view>
<!-- 购物车列表 -->
<view class="cart_content">
    <view class="cart_title">购物车</view>      
    <view class="cart_list">
		<block wx:if="{{cart.length !== 0}}">
			<view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
				<view class="cart_checkbox">
					<checkbox-group bindchange="handleChangeChecked" data-id="{{item.goods_id}}">
						<checkbox class="" value="" checked="{{item.checked}}"> 
						</checkbox>
					</checkbox-group>
				</view>
				<navigator class="cart_img">
					<image src="{{item.pics[0].pics_sma}}" mode="widthFix"></image>
				</navigator>
				<view class="cart_info">
					<view class="goods_name">{{item.goods_name}}</view>
					<view class="goods_price_wrap">
						<view class="goods_price">￥{{item.goods_price}}</view>
						<view class="cart_num_tools">
							<view class="num_edit" bindtap="handleItemNumEdit" data-id="{{item.goods_id}}" data-operation="{{-1}}">-</view>
							<view class="goods_num">{{item.num}}</view>
							<view class="num_edit" bindtap="handleItemNumEdit" data-id="{{item.goods_id}}" data-operation="{{1}}">+</view>
					</view>
					</view>
				</view>
        	</view>
		</block>
		<block wx:else>
			<image mode="widthFix" src="http://img.yao51.com/jiankangtuku/wqfpqkpkqy.jpeg"></image>
		</block>
    </view>
</view>
<!-- 底部工具栏 -->  
<view class="footer_tools">
    <view class="check_wrap">
        <checkbox-group bindchange="handleItemAllChecked">
            <checkbox checked="{{isAllChecked}}"></checkbox>全选
        </checkbox-group>
    </view>
    <view class="total_price_wrap">
        <view class="total_price">
            合计：<text class="total_price_text">￥{{totalPrice}}</text>
        </view>
        <view>包含运费</view>
    </view>
    <view class="order_pay_wrap" bindtap="handlePay">
        结算({{totalNum}})
    </view>
</view>
  
