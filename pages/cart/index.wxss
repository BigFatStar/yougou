.receiver-address-row button {
  margin: 20rpx auto;
}

.receiver-address-row .user_info_row {
  display: flex;
  padding: 20rpx;
}

.receiver-address-row .user_info_row .user_info {
  flex: 5;
}

.receiver-address-row .user_info_row .user_phoneNum {
  flex: 3;
  text-align: right;
}

.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}

.cart_list .cart_item {
  padding: 20rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
}

.cart_list .cart_item .cart_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_list .cart_item navigator.cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_list .cart_item navigator.cart_img image {
  width: 80%;
}

.cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}

.cart_info .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}

.cart_info .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}

.cart_info .goods_price_wrap .cart_num_tools {
  display: flex;
}

.cart_info .goods_price_wrap .cart_num_tools .num_edit, .cart_info .goods_price_wrap .cart_num_tools .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_info .goods_price_wrap .cart_num_tools .num_edit {
  border: 1rpx solid #ccc;
}

.footer_tools {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}

.footer_tools .check_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer_tools .total_price_wrap {
  flex: 4;
  text-align: right;
  padding-right: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.footer_tools .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}

.footer_tools .total_price_wrap view {
  font-size: 24rpx;
}

.footer_tools .order_pay_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--themeColor);
  color: #fff;
  font-size: 34rpx;
}
