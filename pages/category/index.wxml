<!--pages/category/index.wxml-->
<view class="cates">
    <search-input></search-input>
    <view class="cates_container">
        <!-- 左侧菜单栏 -->
        <scroll-view class="left_menu" scroll-y="true">
            <view class="menu_item {{index === currentIndex ? 'active' : ''}}"
            wx:for="{{leftMenuList}}" wx:key="*this" 
            data-idx="{{index}}"
            bindtap="getContentList">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧内容 -->
        <scroll-view class="right_content" scroll-y="true" scroll-top="{{scrollTop}}">
            <view class="goods_group" wx:for="{{rightContent}}" wx:key="cat_id" wx:for-item="item1" wx:for-index="index1">
                <view class="goods_title">
                    <text class="demiliter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="demiliter">/</text> 
                </view>
                <view class="goods_list">
                    <navigator 
                    wx:for="{{item1.children}}" wx:key="cat_id" wx:for-item="item2" wx:for-index="index2"
                    url="/pages/goods_list/index?cid={{item2.cat_id}}">
                        <image src="{{item2.cat_icon}}" mode="widthFix"></image>
                        <view>{{item2.cat_name}}</view>
                    </navigator>
                </view>   
            </view>
        </scroll-view> 
    </view>
</view>
