.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}

.cates .cates_container .left_menu {
  flex: 2;
}

.cates .cates_container .left_menu .menu_item {
  text-align: center;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}

.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.cates .cates_container .right_content {
  flex: 5;
}

.right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right_content .goods_group .goods_title .demiliter {
  color: #ccc;
  padding: 0 10rpx;
}

.right_content .goods_group .goods_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.right_content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}

.right_content .goods_group .goods_list navigator image {
  width: 50%;
}
