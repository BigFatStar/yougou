.collected_main {
  background: #f3f4f6;
}

.collected_title {
  padding: 40rpx 0;
}

.collected_title text {
  padding: 15rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  margin-left: 20rpx;
}

.collected_title .active {
  border-color: var(--themeColor);
}

.collected_content .goods_item {
  display: flex;
  border-bottom: 2rpx solid #999;
  background: #fff;
}

.collected_content .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collected_content .goods_item .goods_img_wrap image {
  width: 70%;
}

.collected_content .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.collected_content .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}

.collected_content .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font: 32rpx;
}
